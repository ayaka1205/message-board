<div class="form-horizontal" role="form">
<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<form class="form-horizontal">
  <div class="form-group">
  <label for="inputEmail3" class="col-sm-1 control-label">名前:</label>
   <div class="col-sm-10">
  <%= f.text_area :name, :class => "form-control" %>
  </div>
  </div>
  <div class="form-group">
  <label for="inputEmail3" class="col-sm-1 control-label">年齢：</label>
 <div class="col-sm-10">
   <%= f.text_area :age, :class => "form-control" %>
  </div>
  </div>
  <div class="form-group">
  <label for="inputEmail3" class="col-sm-1 control-label">内容:</label>
  <div class="col-sm-10">
  <%= f.text_area :body, :class => "form-control" %>
  </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
  <%= f.submit class: "btn btn-default" %>
  </div>
  </div>
<% end %>
</form>
